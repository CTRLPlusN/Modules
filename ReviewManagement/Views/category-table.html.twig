{% import '@template/table.html.twig' as layout %}

    {% set labels, items = ['N°', 'Titre', 'Créé le', 'Modifié le', 'Effacer'], categories %}

    {% set content %}
        {% for item in items %}
            <tr class="{{ item.parent ? '' : 'w3-pale-green' }}">
                {{ layout.col( loop.revindex) }}
                {{ layout.edit( {'name': 'admin_category_edit', 'params': {'id':item.id } }, item.title, (item.parent ? 'w3-padding-left' : '') ) }}
                {{ layout.col( item.created|date('Y-m-d') ) }}
                {{ layout.col( item.updated|date('Y-m-d') ) }}
                {{ layout.delete( {'name': 'admin_category_delete', 'params': {'id':item.id } } ) }}
            </tr>
        {% endfor %}
    {% endset %}

    {{ layout.table(labels, content) }}