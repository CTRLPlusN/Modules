{% import '@template/table.html.twig' as layout %}

{% set labels, items = ['N°', 'Titre', 'URL', 'Créé le', 'Effacer'], links %}

{% set content %}
    {% for item in items %}
        <tr>
            {{ layout.col( loop.revindex) }}
            {{ layout.edit( {'name': 'admin_link_edit', 'params': {'id':item.id } }, item.title) }}
            {{ layout.col( item.url) }}
            {{ layout.col( item.created|date('Y-m-d') ) }}
            {{ layout.delete( {'name': 'admin_link_delete', 'params': {'id':item.id } } ) }}
        </tr>
    {% endfor %}
{% endset %}

{{ layout.table(labels, content) }}