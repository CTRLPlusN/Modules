{% extends '@admin/base.html.twig' %}
{% set css_form = 'w3-container w3-margin-top w3-margin-bottom' %}
{% block body %}

    {% include('@admin/layout/header.html.twig') with {'icon': 'file-o', 'title': 'Editer un album'} %}

    <div class="w3-section w3-card-2 w3-padding">
        {{ form_start(form, { 'attr' : { 'class': css_form} } ) }}
        {{ form_errors(form) }}
        <div class="grid-1 has-gutter">
            <div class="">
                {{ form_label(form.title, "Titre*") }}
                {{ form_widget(form.title) }}
                {{ form_errors(form.title) }}
            </div>
            <div class="">
                {{ form_label(form.description, "Description (512 caractères maxi)") }}
                {{ form_widget(form.description, { 'attr' : { 'rows':6} }) }}
                {{ form_errors(form.description) }}
            </div>
        </div>
        {{ form_widget(form._token) }}
        <p><em>* champs requis</em></p>
        <button class="w3-btn w3-black w3-hover-lime w3-margin-top" type="submit">Enregistrer</button>
        {{ form_end(form) }}
        {% if album.id|length %}
            <div class="w3-padding">
                <h3>Photos dans l'album</h3>
                <a  class="w3-btn w3-black w3-hover-lime w3-margin-top" href="{{ path('admin_image_add', {'id':album.id }) }}"><i class="fa fa-plus"></i> Ajouter une photo</a>
            </div>

                <div class="w3-padding w3-section">
                    <div class="grid-5-small-2 has-gutter">
                        {% for image in images %}
                            <div class="w3-center w3-border w3-round w3-padding w3-light-grey">
                                <div class="w3-display-container">
                                    <a href="{{ path('admin_image_edit', {'id': image.id }) }}" title="Editer : {{ image.title }}">
                                        <img src="{{ absolute_url(asset(image.relativePath)) }}" style="width: 100%">
                                    </a>
                                    <figcaption class="w3-small">Ajouté le : {{ image.created|date('Y-m-d')}} </figcaption>
                                    <div class="w3-display-topright w3-hide-medium">
                                        <a href="{{ path('admin_image_delete', {'id': image.id} ) }}" title="Supprimer" class="w3-tag w3-hover-red w3-text-white w3-padding "><i class=" fa fa-trash"></i></a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
        </div>
    </div>



{% endblock %}